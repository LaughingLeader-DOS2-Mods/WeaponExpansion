EVENT LLWEAPONEX_Tripping_GuaranteedKnockdown
VARS
	CHARACTER:_Character
	STATUS:_Result
	LIST<STATUS>:_RemoveList
	INT:_Turns
ON
	FetchCharacterApplyStatusData(_Character, LLWEAPONEX_TRIPPING)
ACTIONS
	Set(_Result, LLWEAPONEX_TRIPPING)
IF "c1"
